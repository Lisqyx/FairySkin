@{
    ViewBag.Title = "StockReplacement";
}
<link href="@Url.Content("~/Content/StockReplacement.css")" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="d-flex align-items-center mb-3">
    <h2>STOCK RETURN</h2>
    <button class="btn btn-outline-dark rounded add-btn ms-auto" onclick="location.href='@Url.Action("StockReplacementNew","Stocks")'">
        <i class="bi bi-plus-circle"></i> Add New
    </button>
</div>

<div class="row search-section">
    <div class="col-md-2">
        <div class="date-input">
            <input type="text" class="form-control" id="dateFrom" placeholder="Date From">
        </div>
    </div>
    <div class="col-md-2">
        <div class="date-input">
            <input type="text" class="form-control" id="dateTo" placeholder="Date To">
        </div>
    </div>
    <div class="col-md-2">
        <button class="btn search-btn" id="searchBtn">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-header">
            <tr>
                <th>No.</th>
                <th>Date</th>
                <th>SR#</th>
                <th>Receiver</th>
                <th>Notes</th>
                <th>Created By</th>
                <th>Date Created</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>04-20-2025</td>
                <td>1001</td>
                <td>Customer ABC</td>
                <td></td>
                <td>mylene</td>
                <td>04-01-2025 01:00PM</td>
                <td class="text-center">
                    <i class="bi bi-printer action-icon"></i>
                    <i class="bi bi-pencil-square action-icon"></i>
                    <i class="bi bi-trash action-icon"></i>
                </td>
            </tr>
        </tbody>
    </table>
</div>