                <td class="text-center">
                    <i class="bi bi-printer action-icon"></i>
                    <i class="bi bi-pencil-square action-icon"></i>
                    <i class="bi bi-trash action-icon"></i>
                </td>
            </tr>
            <tr>
                <td>DR 1002</td>
                <td>04-02-2025</td>
                <td>Customer ABC</td>
                <td>5001</td>
                <td>100</td>
                <td>200</td>
                <td>mylene</td>
                <td>04-01-2025 01:00PM</td>
                <td class="text-center">
                    <i class="bi bi-printer action-icon"></i>
                    <i class="bi bi-pencil-square action-icon"></i>
                    <i class="bi bi-trash action-icon"></i>
                </td>
            </tr>
            <tr>
                <td colspan="6"></td>
                <td colspan="3" class="text-end">200</td>
            </tr>
        </tbody>
    </table>
</div>