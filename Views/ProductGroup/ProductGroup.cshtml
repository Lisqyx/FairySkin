
@{
    ViewBag.Title = "ProductGroup";
}
<link href="@Url.Content("~/Content/UserManagement.css")" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="d-flex align-items-center mb-3">
    <h2 class="text-uppercase">Product Group</h2>
    <button class="btn btn-outline-dark rounded add-btn ms-3">
        <i class="bi bi-plus"></i> Add New
    </button>
</div>

<table class="table">
    <thead class="bg-secondary text-white">
        <tr>
            <th scope="col" style="width:10%;">Disabled</th>
            <th scope="col">GroupID</th>
            <th scope="col">Type</th>
            <th scope="col">Group name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>1</td>
            <td>FG</td>
            <td>Derma Facial Kit</td>
            <td>
                <a href="#" class="icon-link"><i class="bi bi-box-seam"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-pencil-square"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>2</td>
            <td>PM</td>
            <td>Derma Facial Kit</td>
            <td>
                <a href="#" class="icon-link"><i class="bi bi-box-seam"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-pencil-square"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>3</td>
            <td>PM</td>
            <td>Premium Tinted Sunscreen 50G</td>
            <td>
                <a href="#" class="icon-link"><i class="bi bi-box-seam"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-pencil-square"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="addPGModal" tabindex="-1" aria-labelledby="addPGModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPGModalLabel">Add New Product Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addPGForm">
                    <div class="mb-3">
                        <label for="type" class="form-label">Type:</label>
                        <select class="form-control" id="type" required >
                            <option value="FG">FG</option>
                            <option value="PM">PM</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="groupname" class="form-label">Group Name:</label>
                        <input type="text" class="form-control" id="groupname" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4 me-2">Save</button>
                        <button type="button" class="btn btn-danger px-4" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>document.addEventListener('DOMContentLoaded', function() {
    // Get the add new button and attach click event
    const addNewBtn = document.querySelector('.add-btn');
    addNewBtn.addEventListener('click', function() {
      // Initialize and show the modal
      const addPGModal = new bootstrap.Modal(document.getElementById('addPGModal'));
      addPGModal.show();
    });

    // Handle form submission
    const addPGForm = document.getElementById('addPGForm');
    addPGForm.addEventListener('submit', function(e) {
      e.preventDefault();

      // Close modal and reset form
      const addPGModal = bootstrap.Modal.getInstance(document.getElementById('addPGModal'));
      addPGModal.hide();
      addPGForm.reset();
    });
  });</script>