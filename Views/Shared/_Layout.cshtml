<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <div class="navbar navbar-dark navbar-expand-lg fixed-top flex-column align-items-start">
        <div class="navcontent">
            <h3>Fairy Skin</h3>
            <p>Warehouse Inventory System</p>
        </div>
    </div>
    <div class="sidenav">
        <a class="MenuTitle" style="font-weight: bold; font-size: 16px;">General Settings</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("UserManagement","UserManagement")'">User Management</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("Branches","Branches")'" )">Branches</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("Location","Location")'">Location</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("Customers","Customers")'" )">Customers</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("ProductGroup","ProductGroup")'">Product Group</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("Products","Products")'">Products</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("Suppliers","Suppliers")'">Suppliers</a>

        <a class="MenuTitle" style="font-weight: bold; font-size: 16px;">Main Menu</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("PurchaseOrder","PurchaseOrder")'">Purchase Order</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryIn","Inventory")'">Inventory In</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryOut","Inventory")'">Inventory Out</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("BranchTransfer","Stocks")'">Branch Transfer</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("StockAdjustment","Stocks")'">Stock Adjustment</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("StockReconciliation","Stocks")'">Stock Reconciliation</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("StockReturn","Stocks")'">Stock Return</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("StockReplacement","Stocks")'">Stock Replacement</a>

        <a class="MenuTitle" style="font-weight:bold; font-size:16px;">Report Central</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryOutReport","Inventory")'">Inventory Out Report</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryInReport","Inventory")'">Inventory In Report</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryReportPerLocation","Inventory")'">Inventory Report per Location</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("InventoryReportSummary","Inventory")'">Inventory Report Summary</a>
        <a class="sidenavitem" type="button" onclick="location.href='@Url.Action("DefectiveStocksReport","Stocks")'">Defective Stocks Report</a>
    </div>
    <div class="container body-content" style="margin-left:200px; margin-top:50px;">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Fairy Skin</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>
<style>
    body {
        overflow-x: hidden;
    }
    .navbar {
        border-radius: 0;
        background-color: #d89292;
        height: 10%;
        box-shadow: 0 0 10px 0;
    }
    .navcontent{
        margin-left:30px;
        margin-top:5px;
    }
    .navcontent h3{
        color:white;
        font-size:20px;
        margin-bottom:-5px;
        text-shadow:1px 2px 5px black;
        font-weight:bold;
    }
        .navcontent p{
            font-size: 18px;
            color:white;
            text-shadow: 1px 2px 5px black;
        }
    .sidenav {
        text-align:left;
        height: 100%; /* 100% Full-height */
        width: 12%;
        position: fixed; /* Stay in place */
        top: 0; /* Stay at the top */
        background-color: #e2b6b6;
        overflow-x: hidden; /* Disable horizontal scroll */
        padding-top: 60px; /* Place content 60px from the top */
        margin-top:20px;
    }

        /* The navigation menu links */
        .sidenav a {
            padding: 0px 0px 2px 16px;
            text-decoration: none;
            font-size: 12px;
            color:black;
            display: block;
            font-weight:500;
            font-family:'Sans Serif Collection'
        }
        .sidenavitem{
            margin-bottom:4px;
        }
        .sidenavitem:hover{
            color:white;
        }
</style>