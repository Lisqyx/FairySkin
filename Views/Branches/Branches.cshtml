
@{
    ViewBag.Title = "Branches";
}
<link href="@Url.Content("~/Content/Branches.css")" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">


<div class="d-flex align-items-center mb-3">
    <h2 class="text-uppercase">Branches</h2>
    <button class="btn btn-outline-dark rounded add-btn ms-3">
        <i class="bi bi-plus"></i> Add New
    </button>
</div>

<table class="table">
    <thead class="bg-secondary text-white">
        <tr>
            <th scope="col" style="width:10%;">Disabled</th>
            <th scope="col">BranchID</th>
            <th scope="col">BranchName</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>1</td>
            <td>Main Warehouse</td>
            <td>
                <a href="#" class="icon-link"><i class="bi bi-pencil-square"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>2</td>
            <td>Accounting Office</td>
            <td>
                <a href="#" class="icon-link"><i class="bi bi-pencil-square"></i></a>
                <a href="#" class="icon-link"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="addBranchModal" tabindex="-1" aria-labelledby="addBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBranchModalLabel">Add New Branch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addBranchForm">
                    <div class="mb-3">
                        <label for="fullname" class="form-label">Branch Name:</label>
                        <input type="text" class="form-control" id="branchname" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4 me-2">Save</button>
                        <button type="button" class="btn btn-danger px-4" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>document.addEventListener('DOMContentLoaded', function() {
    // Get the add new button and attach click event
    const addNewBtn = document.querySelector('.add-btn');
    addNewBtn.addEventListener('click', function() {
      // Initialize and show the modal
      const addBranchModal = new bootstrap.Modal(document.getElementById('addBranchModal'));
      addBranchModal.show();
    });

    // Handle form submission
    const addBranchForm = document.getElementById('addBranchForm');
    addBranchForm.addEventListener('submit', function(e) {
      e.preventDefault();

      // Close modal and reset form
      const addBranchModal = bootstrap.Modal.getInstance(document.getElementById('addBranchModal'));
      addBranchModal.hide();
      addBranchForm.reset();
    });
  });</script>