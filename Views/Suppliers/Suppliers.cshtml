@{
    ViewBag.Title = "Suppliers";
}
<link href="@Url.Content("~/Content/Suppliers.css")" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="d-flex align-items-center mb-3">
    <h2>SUPPLIERS</h2>
    <button class="btn btn-outline-dark rounded-circle add-btn ms-3">
        <i class="bi bi-plus"></i> Add New
    </button>
</div>

<table class="table">
    <thead class="bg-secondary">
        <tr>
            <th scope="col">Disabled</th>
            <th scope="col">SupplierID</th>
            <th scope="col">Supplier Name</th>
            <th scope="col">Contact No.</th>
            <th scope="col">Address</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>1</td>
            <td>Supplier 1</td>
            <td>09123456789</td>
            <td>1234 Kalye Elm, Lungsod ng Bayan</td>
            <td class="text-center">
                <i class="bi bi-pencil-square action-icon"></i>
                <i class="bi bi-trash action-icon"></i>
            </td>
        </tr>
        <tr>
            <td><input class="form-check-input" type="checkbox" value=""></td>
            <td>2</td>
            <td>Supplier 2</td>
            <td>09187654321</td>
            <td>5678 Avenida Maple, Bayan ng Tondo</td>
            <td class="text-center">
                <i class="bi bi-pencil-square action-icon"></i>
                <i class="bi bi-trash action-icon"></i>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="addSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSupplierModalLabel">ADD NEW SUPPLIER</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addSupplierForm">
                    <div class="mb-3">
                        <label for="suppliername" class="form-label">Supp   lier Name:</label>
                        <input type="text" class="form-control" id="suppliername" required>
                    </div>
                    <div class="mb-3">
                        <label for="contactno" class="form-label">Contact No.:</label>
                        <input type="text" class="form-control" id="contactno" required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address:</label>
                        <input type="text" class="form-control" id="address" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">Save</button>
                        <button type="button" class="btn btn-danger px-4" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addNewBtn = document.querySelector('.add-btn');
        addNewBtn.addEventListener('click', function () {
            // show modal
            const addSupplierModal = new bootstrap.Modal(document.getElementById('addSupplierModal'));
            addSupplierModal.show();
        });

        // Handle form submission
        const addSupplierForm = document.getElementById('addSupplierForm');
        addSupplierForm.addEventListener('submit', function (e) {
            e.preventDefault();

            // close modal
            const addSupplierModal = bootstrap.Modal.getInstance(document.getElementById('addSupplierModal'));
            addSupplierModal.hide();
            addSupplierForm.reset();
        });
    });
</script>